@model IEnumerable<WebApplicationTraining.Models.TrainerCourse>
@{
    ViewBag.Title = "Assign Trainer to Course";
}


@if (User.IsInRole("TrainingStaff"))
{
    <h2>Assign Trainer To Course</h2>
    <p>
        @Html.ActionLink("Assign Trainer to Course", "Create", null, new { @class = "btn btn-default" })
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainer.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Category)
                </td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainer"))
{
    <h2>Courses Assigned</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Course)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>

            </tr>
        }
    </table>
}
@Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-primary" })

