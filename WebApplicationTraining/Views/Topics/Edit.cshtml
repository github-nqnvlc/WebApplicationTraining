@model WebApplicationTraining.Models.Topic
@{
    ViewBag.Title = "Edit Topic";
}

<h2>Edit Topic</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Topics", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Id)
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.EditorFor(p => p.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description)
        @Html.EditorFor(p => p.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(p => p.Description, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
 }

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>