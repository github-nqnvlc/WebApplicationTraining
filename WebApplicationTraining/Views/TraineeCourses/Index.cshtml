﻿@model IEnumerable<WebApplicationTraining.Models.TraineeCourse>
@{ ViewBag.Title = "Assign Trainee to Course"; }


@if (User.IsInRole("TrainingStaff"))
{
    <h2>Courses</h2>
    <p>
        @Html.ActionLink("Assign Trainee to Course", "Create", null, new { @class = "btn btn-default" })
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainee"))
{
    <h2>Courses Assigned</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Course)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>
                
            </tr>
        }
    </table>
}
@Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-primary" })


