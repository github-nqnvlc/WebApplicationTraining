@model WebApplicationTraining.ViewModels.TraineeCourseViewModel
@{
    ViewBag.Title = "Edit Assign Traiee To Course";
}

<h2>Edit Assign Traiee To Course</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "TraineeCourse", FormMethod.Post))
{
    @Html.HiddenFor(u => u.TraineeCourses.Id)
    
        <div class="form-group">
            @Html.LabelFor(u => u.TraineeCourses.Trainee, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(x => x.TraineeCourses.TraineeId, 
                new SelectList(Model.Trainees, "Id", "UserName"), 
                "Select User", new { @class = "form-control" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TraineeCourses.Course, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(x => x.TraineeCourses.CourseId,
                new SelectList(Model.Courses, "Id", "Name"),
                "Select Courses", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
}
<br/>
@Html.ActionLink("Back Index", "Index", null, new { @class = "btn btn-default" })