@model WebApplicationTraining.Models.TraineeCourse
@{
    ViewBag.Title = "Edit Assign Traiee To Course";
}

<h2>Edit Assign Traiee To Course</h2>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "TrainerTopics", FormMethod.Post))
{
    @Html.HiddenFor(u => u.Id)
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(u => u.TraineeId)
            @Html.EditorFor(u => u.TraineeId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(u => u.TraineeId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.CourseId)
            @Html.EditorFor(u => u.CourseId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(u => u.CourseId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
