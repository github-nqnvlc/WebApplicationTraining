﻿@model IEnumerable<WebApplicationTraining.Models.TrainerTopic>
@{
    ViewBag.Title = "Assign Trainer To Topic";
}



@if (User.IsInRole("Trainer"))
{
<h2>Topic Assigned</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Topic)
            </th>

            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.Name)
                </td>

            </tr>
        }
    </table>
}
@if (User.IsInRole("TrainingStaff"))
{
    <h2>Topic</h2>
    <p>
        @Html.ActionLink("Assign Trainer To Topic", "Create", null, new { @class = "btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <!--<th>Edit</th>-->
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainer.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Topic.Name)
                </td>

                <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
        }

    </table>
}
@Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-primary" })
