﻿@model WebApplicationTraining.Models.TrainerTopic
@{
    ViewBag.Title = "Edit Assign Trainer T";
}

<h2>Edit</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "TrainerTopics", FormMethod.Post))
{
    @Html.HiddenFor(u => u.Id)
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(u => u.Trainer.Name)
            @Html.DropDownListFor(u => u.TrainerId,new SelectList(Model.TrainerId, "Id", "Name"),"Select Trainer",new { @class = "form-control" })
            
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Topic)
            @Html.EditorFor(u => u.TopicId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(u => u.TopicId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back to Index", "Index", null, new { @class = "btn btn-default" })
